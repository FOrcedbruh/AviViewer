<Window x:Class="AviViewer.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AviViewer"
        mc:Ignorable="d"
         Icon="https://www.iconpacks.net/icons/1/free-video-icon-818-thumb.png"
        Title="Справка" Height="140" Width="460">
    <Grid Background="#FFE3E3">
        <Border CornerRadius="10" Margin="3" Background="#789DBC">
            <StackPanel>
                <TextBlock Margin="5" Foreground="LightGray">
                    Разработчик: Валерия Юркина
                </TextBlock>
                <TextBlock Foreground="#fff" Margin="10">
                    Программа-модуль воспроизведения
                    AVI файлов в формате видео.
                </TextBlock>
                <TextBlock Foreground="#fff" Margin="10">
                    Программа позволяет выбрать локально AVI файл и запустить его в плеере
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
